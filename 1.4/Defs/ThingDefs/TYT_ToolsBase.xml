<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef Name="BaseTools" Abstract="True">
		<!-- Inherits from ThingWithComps; properties are defined through the DefModExtension TakeYourTools -->
		<thingClass>TakeYourTools.TYT_ToolThing</thingClass>
		<category>Item</category>
		<drawerType>MapMeshOnly</drawerType>
		<drawGUIOverlay>true</drawGUIOverlay>
		<altitudeLayer>Item</altitudeLayer>
		<alwaysHaulable>true</alwaysHaulable>
		<tickerType>Never</tickerType>
		<equipmentType>Primary</equipmentType>
		<useHitPoints>true</useHitPoints>
		<pathCost>14</pathCost>
		<selectable>true</selectable>
		<statBases>
			<!--// see BaseWapons.xml-->
			<Flammability>1.0</Flammability>
			<DeteriorationRate>2</DeteriorationRate>
			<Beauty>-3</Beauty>
			<SellPriceFactor>0.20</SellPriceFactor>
		</statBases>
		<comps>
			<li Class="CompProperties_Forbiddable"/>
			<li>
				<compClass>CompEquippable</compClass>
			</li>
		</comps>
		<weaponTags>
			<li>Melee</li>
			<li>Tool</li>
		</weaponTags>
		<graphicData>
			<onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
		</graphicData>
		<inspectorTabs>
			<li>ITab_Art</li>
		</inspectorTabs>
		<allowedArchonexusCount>1</allowedArchonexusCount>
	</ThingDef>
	<!--==================================== BaseTools_Crafted ====================================-->
	<ThingDef Name="BaseTools_Crafted" ParentName="BaseTools" Abstract="True">
		<thingCategories>
			<li>BaseTools_Crafted</li>
		</thingCategories>
		<recipeMaker>
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<skillRequirements>
				<Crafting>3</Crafting>
			</skillRequirements>
			<effectWorking>Sculpt</effectWorking>
			<soundWorking>Recipe_Sculpt</soundWorking>
			<recipeUsers>
				<li>CraftingSpot</li>
			</recipeUsers>
			<unfinishedThingDef>UnfinishedWeapon</unfinishedThingDef>
		</recipeMaker>
		<smeltable>false</smeltable>
		<stuffCategories>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>5</costStuffCount>
		<techLevel>Neolithic</techLevel>
		<comps>
			<li>
				<compClass>CompQuality</compClass>
			</li>
		</comps>
		<tradeTags>
			<li>CraftedTools</li>
		</tradeTags>
	</ThingDef>
	<!--==================================== BaseTools_Forged ====================================-->
	<ThingDef Name="BaseTools_Forged" ParentName="BaseTools" Abstract="True">
		<thingCategories>
